{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://github.com/lvisintini/xwing-data/schema/upgrades.json",
  "type": "object",
  "definitions": {},
  "properties": {
    "name": {
      "type": "string"
    },
    "id": {
      "type": "integer",
      "description": "The upgrade's unique id number. It's not used in the game but it's used to link this upgrade to other data in this dataset.",
      "minimum": 0,
      "exclusiveMinimum": false
    },
    "slot": {
      "type": "string"
    },
    "points": {
      "type": "integer"
    },
    "attack": {
      "type": [
        "integer",
        "string"
      ]
    },
    "range": {
      "type": [
        "integer",
        "string"
      ]
    },
    "text": {
      "type": "string"
    },
    "image": {
      "type": "string"
    },
    "xws": {
      "type": "string"
    },
    "unique": {
      "type": "boolean",
      "description": "Some upgrade cards have unique names, which are identified by the bullet to the left of the name.\n A player cannot field two or more cards that share the same unique name, even if those cards are of different types."
    },
    "size": {
      "type": "array"
    },
    "effect": {
      "type": "string"
    },
    "faction": {
      "type": "string"
    },
    "limited": {
      "type": "boolean"
    },
    "energy": {
      "type": [
        "integer",
        "string"
      ]
    },
    "grants": {
      "type": "array"
    },
    "ship": {
      "type": "array"
    },
    "conditions": {
      "type": "array"
    }
  },
  "required": [
    "name",
    "id",
    "points",
    "text",
    "xws"
  ],
  "additionalProperties": false
}
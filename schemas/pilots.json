{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://github.com/lvisintini/xwing-data/schema/pilots.json",
  "type": "object",
  "definitions": {},
  "properties": {
    "name": {
      "type": "string",
      "description": "The pilot's name, as written on the card itself.",
      "minLength": 1
    },
    "id": {
      "type": "integer",
      "minimum": 0,
      "exclusiveMinimum": false
    },
    "unique": {
      "type": "boolean",
      "description": "This value indicates whether this pilot is unique or not, as indicated by a black dot next to pilot's name in the card (if unique)."
    },
    "ship": {
      "type": "string",
      "description": "The pilot's ship name.",
      "minLength": 1
    },
    "skill": {
      "anyOf": [
        {
          "type": "integer",
          "minimum": 0,
          "maximum": 9,
          "exclusiveMinimum": false,
          "exclusiveMaximum": false
        },
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 1,
          "pattern": "^\\?$"
        }
      ]
    },
    "points": {
      "description": "This pilot's squad points cost.",
      "anyOf": [
        {
          "type": "integer",
          "description": "Squad points cost.",
          "minimum": 1,
          "exclusiveMinimum": false
        },
        {
          "type": "string",
          "description": "Having '?' as a pilot's squad points cost means that there is a special ruling for them an they are variable.",
          "minLength": 1,
          "maxLength": 1,
          "pattern": "^\\?$"
        }
      ]
    },
    "slots": {
      "type": "array",
      "description": "A list of the slots available to this pilot.",
      "uniqueItems": false,
      "items": {
        "description": "A slot available to this ship.",
        "$ref": "definitions.json#/slots"
      }
    },
    "text": {
      "type": "string",
      "description": "The card's text describing it's effect.",
      "minLength": 1
    },
    "image": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[a-z0-9]([a-z0-9-]*[a-z0-9])?(/[a-z0-9]([a-z0-9-]*[a-z0-9])?)*$"
    },
    "faction": {
      "description": "The pilot's faction.",
      "$ref": "definitions.json#/faction"
    },
    "xws": {
      "type": "string",
      "description": "The pilots unique XWS as described in the XWS format.",
      "minLength": 1
    },
    "ship_override": {
      "type": "object",
      "properties": {
        "attack": {
          "description": "The ship's attack value.",
          "minimum": 0,
          "exclusiveMinimum": false
        },
        "agility": {
          "description": "The ship's agility value.",
          "minimum": 0,
          "exclusiveMinimum": false
        },
        "hull": {
          "description": "The ship's hull value.",
          "minimum": 0,
          "exclusiveMinimum": false
        },
        "shields": {
          "description": "The ship's shields value.",
          "minimum": 0,
          "exclusiveMinimum": false
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "range": {
      "type": "string",
      "description": "The ship\\s range. This property is for huge ships only.",
      "pattern": "^[0-9]-[0-9]$"
    },
    "conditions": {
      "type": "array",
      "description": "The pilot's related conditions.",
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "name",
    "id",
    "unique",
    "ship",
    "skill",
    "points",
    "slots",
    "text",
    "image",
    "faction",
    "xws",
    "ship_override",
    "range",
    "conditions"
  ],
  "additionalProperties": false
}